.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.line {
  margin: 40rpx 0;
  border-bottom: 2rpx solid #f2f2f2;
}
input[type="checkbox"] {
  -webkit-appearance: checkbox;
}
input[type="radio"] {
  -webkit-appearance: radio;
}
page {
  background-color: #e8e8e8;
}
.bgConston {
  width: 100%;
  height: 100%;
  background-color: #e8e8e8;
  margin: 0;
  padding: 0;
  padding-bottom: 100rpx;
}
.userSession {
  width: 100%;
  height: auto;
  border-top: 20rpx solid #e8e8e8;
  overflow: auto;
}
.userSession .item {
  margin-bottom: 30rpx;
}
.userSession .time {
  color: #999999;
  text-align: center;
  margin-top: 30rpx;
}
.userSession .userH {
  width: 80%;
  height: auto;
  display: flex;
  flex: 1;
  flex-wrap: wrap;
  padding: 20rpx;
}
.userSession .userH .userImg {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.userSession .userH .userImg image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.userSession .userH .userType {
  display: flex;
  justify-content: center;
  flex-direction: column;
  padding: 20rpx;
  margin-bottom: -30rpx;
}
.userSession .userH .userType .userN {
  height: 50rpx;
  display: flex;
  justify-content: flex-start;
}
.userSession .userH .userType .userN text {
  height: 50rpx;
  min-height: 100rpx;
  color: #999999;
}
.userSession .userH .userType .textType {
  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;
  text-align: left;
  max-width: 400rpx;
  background-color: #FFFFFF;
  border-radius: 10rpx;
  margin-bottom: -20rpx;
  box-shadow: 3rpx 3rpx 3rpx 3rpx #E3E3E3;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
}
.userSession .userH .userType .textType text {
  font-size: 32rpx;
  color: #666;
}
.userSession .userH .userType .imgType {
  max-width: 300rpx;
  max-height: 420rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  box-shadow: 3rpx 3rpx 3rpx 3rpx #E3E3E3;
}
.userSession .userH .userType .imgType image {
  width: 250rpx;
  height: 350rpx;
  padding: 20rpx;
}
.userSession .userH .userType .videoType {
  max-width: 300rpx;
  max-height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  box-shadow: 3rpx 3rpx 3rpx 3rpx #E3E3E3;
}
.userSession .userH .userType .videoType image {
  width: 270rpx;
  height: 370rpx;
  padding: 20rpx;
}
.userSession .userMe {
  width: 100%;
  height: auto;
  display: flex;
  flex: 1;
  flex-wrap: wrap;
  padding: 20rpx;
  justify-content: flex-start;
  flex-direction: row-reverse;
  text-align: right;
}
.userSession .myview {
  color: #999999;
  text-align: right;
  margin-right: 80rpx;
  padding-top: 30rpx;
}
.userSession .otherview {
  color: #999999;
  margin-left: 80rpx;
  padding-top: 30rpx;
}
.userInput {
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 0 10rpx;
  box-shadow: 0 0 5rpx 0 #e3e3e3;
  background-color: white;
}
.userInput .want {
  display: flex;
  color: #999999;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}
.userInput .want .service {
  display: flex;
  border: 1rpx solid #C0C0C0;
  border-radius: 20rpx;
  font-size: 28rpx;
  margin-left: 10rpx;
  padding: 5rpx;
}
.userInput .want .service image {
  width: 20rpx;
  height: 20rpx;
}
.userInput .send {
  display: flex;
  width: 100%;
  height: 100rpx;
}
.userInput .send .sendimg1 {
  width: 10%;
  height: 100%;
  display: flex;
  justify-content: center;
}
.userInput .send .sendimg1 image {
  width: 55rpx;
  height: 55rpx;
  margin-top: 20rpx;
}
.userInput .send .sendinput {
  width: 75%;
  height: 65rpx;
  border-radius: 15rpx;
  border: 1rpx solid #C0C0C0;
  padding-left: 10rpx;
  margin-top: 15rpx;
}
.userInput .send .viewimage {
  width: 55rpx;
  height: 55rpx;
  margin-left: -70rpx;
  margin-top: 5rpx;
}
.userInput .send .viewimage .icon {
  width: 55rpx;
  height: 55rpx;
  position: fixed;
  z-index: 999;
}
.userInput .send .sendimg2 {
  width: 10%;
  margin-left: 30rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  margin-top: 15rpx;
}
.userInput .send .sendimg2 image {
  width: 55rpx;
  height: 55rpx;
  margin-top: 5rpx;
}

