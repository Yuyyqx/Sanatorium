page {
  background-color: #f7f8f9;
}
.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.bottom {
  width: 750rpx;
  background-color: #ffffff;
  margin-top: 30rpx;
  padding: 25rpx 0rpx 0rpx 0rpx;
}
.bottom-item {
  display: flex;
  width: 750rpx;
  padding: 0rpx 0rpx 0rpx 20rpx;
  align-items: center;
}
.bottom-item image {
  width: 25rpx;
  height: 25rpx;
  margin-right: 20rpx;
}
.bottom-item .touxiang {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  right: 50rpx;
  margin: 30rpx 0rpx 30rpx 0rpx ;
}
.right {
  position: absolute;
  right: 0rpx;
  color: #898989;
  display: flex;
  align-items: center;
  /* margin-left: 510rpx; */
}
.right image {
  margin-left: 20rpx;
}
.unShure {
  width: 90rpx;
  height: 40rpx;
  background-color: #bb0003;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 23rpx;
  color: #ffffff;
  border-radius: 50rpx;
}
.shure {
  width: 90rpx;
  height: 40rpx;
  background-color: #61bb9c;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 23rpx;
  color: #ffffff;
  border-radius: 50rpx;
}
.line {
  width: 720rpx;
  height: 1rpx;
  background-color: #f7f8f9;
  margin: 28rpx 0rpx 28rpx 20rpx;
}
.change {
  width: 750rpx;
  height: 90rpx;
  background-color: #ffffff;
  color: #005500;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

