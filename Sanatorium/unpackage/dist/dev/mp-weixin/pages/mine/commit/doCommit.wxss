page {
  background-color: #f7f8f9;
}
.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: column;
  background-color: #ffffff;
  padding-bottom: 40rpx;
}
.form {
  width: 700rpx;
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
}
.form .top {
  display: flex;
}
.form .large-title {
  font-size: 36rpx;
  margin-bottom: 30rpx;
  color: #000000;
}
.form .status {
  margin-top: 50rpx;
}
.form .title {
  font-size: small;
  margin-top: 10rpx;
  width: 200rpx;
}
.form .top {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  color: #BBBBBB;
}
.form .box {
  width: 750rpx;
  display: flex;
  padding-top: 20rpx;
}
.form .box .item {
  display: flex;
  flex-direction: column;
  margin-right: 20rpx;
  font-size: small;
  background-color: #f4f4f4;
  width: 185rpx;
  border-radius: 15rpx;
  box-shadow: 0px 1px 1px 0px #e7e3d3;
}
.form .box .item image {
  width: 185rpx;
  height: 180rpx;
}
.form .box .item text {
  margin: 10rpx 0rpx 10rpx 10rpx;
}
.form .box .item .price {
  color: #878787;
}
.form .scroll {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  display: flex;
  flex-direction: row;
}
.form .line {
  width: 700rpx;
  height: 1rpx;
  background-color: #e6e6e6;
  margin-bottom: -20rpx;
}
.icon {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 25rpx;
}
.check {
  margin-top: 60rpx;
  font-size: small;
}
.button {
  width: 700rpx;
  height: 75rpx;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #27aca3;
  margin-top: 100rpx;
  margin-left: 7rpx;
}
.star {
  margin-top: 20rpx;
  margin-left: -10rpx;
  width: 700rpx;
}
.title1 {
  font-size: small;
  margin-top: 30rpx;
}
.images {
  width: 700rpx;
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.images image {
  width: 150rpx;
  height: 150rpx;
}
.choose {
  margin-top: 20rpx;
  width: 750rpx;
  padding: 20rpx;
  background-color: #ffffff;
  height: 900rpx;
}
.sign {
  display: flex;
  margin: 15rpx 0rpx 10rpx 10rpx;
}
.sign text {
  padding: 20rpx;
  background-color: #f0f0f0;
}
.item {
  display: flex;
  width: 750rpx;
  align-items: center;
}

