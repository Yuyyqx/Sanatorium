.content {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.large {
  width: 750rpx;
  height: 480rpx;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}
.title {
  padding: 0rpx 5rpx 0rpx 5rpx;
  background-color: rgba(83, 128, 123, 0.5);
  color: #ffffff;
  font-size: xx-large;
  margin: -490rpx 0rpx 400rpx -460rpx;
}
.items {
  width: 700rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.item1 {
  width: 300rpx;
  height: 230rpx;
  background-color: #fff8df;
  border-radius: 20rpx;
  box-shadow: 0px 2px 6px 0px #FEBF12;
  font-size: large;
  margin-top: 30rpx;
  padding-top: 20rpx;
}
.item1 text {
  margin: 0rpx 0rpx 0rpx 100rpx;
}
.item1 .circle {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 80rpx;
  margin-left: 10rpx;
}
.item1 .circle image {
  width: 50rpx;
