.content {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.top {
  width: 750rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffffff;
  box-shadow: 0px 2px 3px 0px #dcdcdc;
  position: -webkit-sticky;
  position: sticky;
  top: 0px;
  z-index: 99;
}
.top .date {
  font-size: 35rpx;
}
.title {
  width: 700rpx;
  display: flex;
  margin-top: 20rpx;
  font-size: large;
  align-items: center;
}
.title .box {
  width: 20rpx;
  height: 40rpx;
  background-color: #27aca3;
  margin-right: 10rpx;
}
.qiun-charts {
  width: 750rpx;
  height: 500rpx;
  background-color: #FFFFFF;
}
.charts {
  width: 750rpx;
  height: 500rpx;
  background-color: #FFFFFF;
}
.item-hugong {
  width: 100%;
  height: 75rpx;
  box-shadow: 0px 2px 3px 0px #dcdcdc;
  display: flex;
  align-items: center;
  border: 1rpx solid #eaeaea;
  margin-top: 30rpx;
}
.item-hugong .box {
  width: 10rpx;
  height: 100%;
  background-color: #27aca3;
  margin-right: 20rpx;
}
.item-hugong .price {
  position: absolute;
  right: 45rpx;
  color: #7cb5ec;
  font-size: large;
}
.items {
  width: 700rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 50rpx;
}
.items .item .up {
  width: 100%;
  height: 75rpx;
  box-shadow: 0px 2px 3px 0px #dcdcdc;
  display: flex;
  align-items: center;
  border: 1rpx solid #eaeaea;
  margin-top: 30rpx;
}
.items .item .up .box {
  width: 10rpx;
  height: 100%;
  background-color: #27aca3;
  margin-right: 20rpx;
}
.items .item .price {
  position: absolute;
  right: 45rpx;
  color: #7cb5ec;
  font-size: large;
}
.items .item .price1 {
  position: absolute;
  right: 80rpx;
  color: #7cb5ec;
  font-size: large;
}
.items .item .icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 35rpx;
}
.form {
  width: 100%;
  background-color: #f7f8f9;
  display: flex;
  flex-direction: column;
}
.form .form-item {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e9e9ea;
}
.form .form-item .tx {
  width: 70rpx;
  height: 70rpx;
  margin-right: 5rpx;
  margin-left: 10rpx;
}
.form .form-item .mid {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  font-size: small;
}
.form .form-item .mid .mid-content {
  color: #ababab;
  font-size: smaller;
}
.form .form-item .pay {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: small;
  color: #bc0000;
  border: 1rpx solid #bc0000;
  padding: 5rpx;
}
.form .form-item .form-price {
  position: absolute;
  right: 50rpx;
}

