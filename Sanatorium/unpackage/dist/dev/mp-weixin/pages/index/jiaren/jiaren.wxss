.body {
  display: flex;
  background-color: #ffffff;
}
.left {
  flex-direction: column;
  width: 400rpx;
  margin-top: 40rpx;
  padding-left: 40rpx;
}
.left image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 25rpx;
}
.item {
  display: flex;
  width: 320rpx;
  height: 100rpx;
}
.item .item-right {
  display: flex;
}
.item .content {
  margin-left: 30rpx;
}
.people {
  width: 340rpx;
  height: 650rpx;
}
.charts {
  width: 748rpx;
  height: 498rpx;
  background-color: #FFFFFF;
}
.score {
  display: flex;
  flex-direction: column;
  width: 750rpx;
  padding: 0rpx 25rpx 0rpx 25rpx;
  background-color: #ffffff;
  justify-content: flex-start;
}
.score .up {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.score .num {
  font-size: x-large;
}
.score .health {
  color: #888888;
}
.btns {
  background-color: #ffffff;
  display: flex;
  width: 740rpx;
  padding: 30rpx 0rpx 40rpx 0rpx;
  justify-content: space-around;
}
.btns .btn {
  width: 320rpx;
  height: 80rpx;
  border-radius: 5rpx;
  background-color: #fffae8;
  color: #27aca3;
  border: 1rpx solid #27aca3;
  display: flex;
  align-items: center;
  justify-content: center;
}
.scroll {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
