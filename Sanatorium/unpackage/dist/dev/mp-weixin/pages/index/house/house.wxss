page {
  background-color: #f7f8f9;
}
.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.top {
  width: 750rpx;
  height: 100rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  padding: 25rpx;
}
.down {
  width: 22rpx;
  height: 22rpx;
  margin-left: 8rpx;
}
.input {
  width: 580rpx;
  height: 60rpx;
  border: 1rpx solid #27ACA3;
  border-radius: 10rpx;
  margin-left: 20rpx;
  display: flex;
  padding-left: 10rpx;
  align-items: center;
}
.input image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.mid {
  width: 750rpx;
  height: 1000rpx;
  background-color: #ffffff;
  margin-top: 20rpx;
  padding-top: 20rpx;
}
.all {
  color: #999999;
  font-size: 28rpx;
  margin-left: 490rpx;
}
.middle {
  display: flex;
  width: 680rpx;
  height: 80rpx;
  align-items: center;
  justify-content: space-between;
  margin-left: 35rpx;
  color: #333333;
}
.card {
  width: 700rpx;
  background-color: #ffffff;
  margin-left: 25rpx;
  display: flex;
  flex-direction: column;
}
.item {
  height: 200rpx;
  width: 100%;
  display: flex;
  margin-top: 30rpx;
}
.item .right {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #ebebeb;
}
.item .item-title {
  font-size: 33rpx;
  font-weight: 500;
}
.item image {
  width: 160rpx;
  height: 160rpx;
}
.item .star {
  width: 200rpx;
  height: 50rpx;
  margin: 10rpx 0rpx 10rpx -10rpx;
}
.item .box {
  display: flex;
}
.item .box text {
  margin-left: 240rpx;
  color: #a2a2a2;
  margin-top: 15rpx;
  font-size: small;
}
.sign {
  display: flex;
  margin-left: -10rpx;
}
.sign text {
  padding: 7rpx;
  background-color: #f0f0f0;
  font-size: small;
  margin-left: 15rpx;
}

