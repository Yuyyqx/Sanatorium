page {
  background-color: #f7f8f9;
}
.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.top {
  display: flex;
  background-color: #ffffff;
  flex-direction: column;
}
.intro {
  display: flex;
  background-color: #ffffff;
  width: 750rpx;
  height: 300rpx;
  padding: 30rpx;
}
.large {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.box {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
  align-items: flex-start;
  height: 190rpx;
  justify-content: space-between;
  font-size: 25rpx;
}
.box .title {
  font-weight: 600;
  font-size: 33rpx;
}
.box .price {
  width: 250rpx;
  display: flex;
  justify-content: space-around;
  margin-left: -20rpx;
}
.box .star {
  width: 250rpx;
  height: 50rpx;
  margin: -10rpx 0rpx -10rpx -10rpx;
}
.box .addre {
  display: flex;
}
.box .addre image {
  width: 20rpx;
  height: 20rpx;
  margin-left: 280rpx;
  margin-top: 15rpx;
}
.line {
  width: 700rpx;
  height: 1rpx;
  background-color: #eaeaea;
  margin: -40rpx 0rpx 0rpx 25rpx;
}
.status {
  width: 700rpx;
  font-size: 25rpx;
  padding: 25rpx;
}
.time {
  margin-left: 20rpx;
}
.status-down {
  margin-top: 15rpx;
}
.status-down text {
  padding: 6rpx;
  background-color: #f6f6f6;
  margin-right: 10rpx;
  font-size: 23rpx;
}
.address {
  width: 700rpx;
  font-size: 25rpx;
  padding: 15rpx 0rpx 15rpx 25rpx;
  display: flex;
}
.status-down1 {
  margin-top: 5rpx;
  color: #9a9a9a;
}
.line1 {
  width: 700rpx;
  height: 1rpx;
  background-color: #eaeaea;
  margin: 0rpx 0rpx 0rpx 25rpx;
}
.phone {
  width: 35rpx;
  height: 35rpx;
  margin-top: 10rpx;
  position: absolute;
  right: 40rpx;
}
.mid {
  margin-top: 20rpx;
  width: 750rpx;
  background-color: #ffffff;
  padding: 25rpx;
  display: flex;
  flex-direction: column;
}
.mid .mid-title {
  display: flex;
  align-items: center;
}
.mid .mid-title .tc {
  width: 29rpx;
  height: 29rpx;
  margin-right: 5rpx;
}
.mid .body {
  width: 750rpx;
  background-color: #ffffff;
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.mid .body .item {
  width: 330rpx;
  height: 460rpx;
  display: flex;
  border: 1rpx solid #e1e1e1;
  flex-direction: column;
  font-size: small;
  margin-left: 15rpx;
  margin-bottom: 20rpx;
}
.mid .body .item image {
  width: 331rpx;
  height: 400rpx;
}
.mid .body .item .item-title {
  font-weight: 600;
  margin: 10rpx 0rpx 10rpx 10rpx;
}
.mid .body .item .price {
  color: #cc5d31;
  margin: 0rpx 0rpx 10rpx 10rpx;
}
.mid .body .item .item-sold {
  color: #a3a3a3;
  font-size: smaller;
  text-align: right;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}
.bottom {
  width: 750rpx;
  background-color: #ffffff;
  margin-top: 20rpx;
  padding: 25rpx;
}
.bottom .mid-title {
  display: flex;
  align-items: center;
}
.bottom .mid-title .tc {
  width: 29rpx;
  height: 29rpx;
  margin-right: 5rpx;
}
.bottom .mid-title .tc1 {
  width: 29rpx;
  height: 29rpx;
  margin-left: 580rpx;
}
.bottom .bottom-body {
  width: 750rpx;
  padding-top: 20rpx;
  margin-bottom: 150rpx;
}
.bottom .bottom-body .bottom-item {
  display: flex;
}
.bottom .bottom-body .tx {
  width: 85rpx;
  height: 85rpx;
  border-radius: 50%;
}
.bottom .bottom-body .right {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-left: 15rpx;
  border-bottom: 1rpx solid #e8e8e8;
}
.bottom .bottom-body .bottom-item-title {
  display: flex;
  height: 90rpx;
  font-weight: 500;
  align-items: center;
}
.bottom .bottom-body .bottom-item-title image {
  width: 80rpx;
  height: 80rpx;
}
.bottom .bottom-body .bottom-item-title text {
  color: #616d7f;
}
.bottom .bottom-body .bottom-item-time {
  color: #717171;
}
.bottom .bottom-body .score {
  display: flex;
  align-items: center;
  color: #333333;
}
.bottom .bottom-body .score image {
  width: 200rpx;
  height: 50rpx;
}
.bottom .bottom-body .detail {
  color: #333333;
  width: 590rpx;
}
.bottom .bottom-body .images {
  width: 600rpx;
  display: flex;
}
.bottom .bottom-body .images image {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx 20rpx 20rpx 0rpx;
}
