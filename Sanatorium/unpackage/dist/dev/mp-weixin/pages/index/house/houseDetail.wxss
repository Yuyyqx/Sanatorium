.btn {
  position: fixed;
  bottom: 0;
  padding: 30rpx 0;
  border-top: 2rpx solid #f8f8f8;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100vw;
  z-index: 999;
  background-color: #fff;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.btn .nextSubmit {
  background-color: #27aca3;
  color: white;
  border-radius: 10px;
  text-align: center;
  width: 80%;
  line-height: 76rpx;
}
.btn image {
  width: 50rpx;
  height: 50rpx;
}
.btn-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: smaller;
}

