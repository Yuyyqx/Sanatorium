<view><block wx:if="{{change===0}}"><view class="content"><view class="up"><view class="title"><text class="elder">查看老人</text><text class="all">查看全部</text><image class="icon" src="../../static/images/mine3.png"></image></view><scroll-view class="scroll" scroll-x="true"><view style="display:flex;"><block wx:for="{{list}}" wx:for-item="item" wx:for-index="__i0__" wx:key="*this"><view data-event-opts="{{[['tap',[['gotoDetail']]]]}}" class="item" bindtap="__e"><view class="box"><image src="{{item.imgUrl}}"></image></view><text class="all">{{item.name}}</text></view></block></view></scroll-view></view><view class="mid"><image src="../../static/images/tv.png"></image><text>实时监控</text></view><view class="down"><block wx:for="{{downList}}" wx:for-item="item" wx:for-index="__i1__" wx:key="*this"><view data-event-opts="{{[['tap',[['gotoDetail']]]]}}" class="down-item" bindtap="__e"><image src="{{item.imgUrl}}"></image><text class="item-up">{{item.name}}</text><text class="item-down">{{item.add}}</text></view></block></view></view></block><block wx:if="{{change===1}}"><view class="content"><view class="color"><picker mode="date" value="{{date}}" data-event-opts="{{[['change',[['bindDateChange',['$event']]]]]}}" bindchange="__e"><view class="top"><text>{{date}}</text><image class="icon" src="../../static/images/down1.png"></image></view></picker><view class="people"><text>选择老人：</text><picker mode="selector" range="{{title_list}}" range-key="name" data-event-opts="{{[['change',[['titlePicker',['$event']]]]]}}" bindchange="__e"><view class="top"><text class="name">{{title}}</text><image class="icon" src="../../static/images/down1.png"></image></view></picker></view></view><view class="report"><block wx:for="{{reportList}}" wx:for-item="item" wx:for-index="__i2__" wx:key="*this"><view data-event-opts="{{[['tap',[['projectDetail']]]]}}" class="report-item" bindtap="__e"><view class="report-item-up"><image src="{{item.iconUrl}}"></image><text>{{item.name}}</text><text class="{{[item.type=='每日任务'?'sign-normal':'sign-special']}}">{{item.type}}</text><block wx:if="{{item.finish}}"><image class="finish" src="../../static/images/finish.png"></image></block></view><text class="click">{{"截止时间："+item.deadTime}}</text></view></block></view></view></block></view>